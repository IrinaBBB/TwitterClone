<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TweetActivity"
    android:padding="16dp">

    <!-- Tweet Text Input Field -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutTweet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="What's happening?">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextTweet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minHeight="100dp"
            android:maxLines="4" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- ImageView for Tweet Picture -->
    <ImageView
        android:id="@+id/imageViewTweet"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/pictures"
        android:contentDescription="Tweet image"
        android:scaleType="fitEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutTweet" />

    <!-- Upload Image FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabUploadImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_camera"
        app:tint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/imageViewTweet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fabSaveTweet"
        android:contentDescription="Upload Image" />

    <!-- Save Tweet FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSaveTweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/send"
        app:tint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/imageViewTweet"
        app:layout_constraintStart_toEndOf="@+id/fabUploadImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Save Tweet" />

</androidx.constraintlayout.widget.ConstraintLayout>
